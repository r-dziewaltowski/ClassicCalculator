@page "/"
@using ClassicCalculator
@inject Calculator Calculator

<div class="calculator">
    <div class="display">
        <input type="text" class="form-control" value="@Calculator.DisplayValue" readonly />
    </div>
    <div class="buttons">
        <div class="row">
            <button class="btn btn-secondary" @onclick="Calculator.ToggleSign">±</button>
            <button class="btn btn-secondary" @onclick="Calculator.Clear">C</button>
            <button class="btn btn-primary operation-btn" @onclick="() => Calculator.SetOperation(OperationType.Divide)">/</button>
            <button class="btn btn-primary operation-btn" @onclick="() => Calculator.SetOperation(OperationType.Multiply)">*</button>
        </div>
        <div class="row">
            @foreach (var digit in new[] { "7", "8", "9" })
            {
                <button class="btn btn-light digit-btn" @onclick="() => Calculator.AppendDigit(digit)">@digit</button>
            }
            <button class="btn btn-primary operation-btn" @onclick="() => Calculator.SetOperation(OperationType.Subtract)">-</button>
        </div>
        <div class="row">
            @foreach (var digit in new[] { "4", "5", "6" })
            {
                <button class="btn btn-light digit-btn" @onclick="() => Calculator.AppendDigit(digit)">@digit</button>
            }
            <button class="btn btn-primary operation-btn" @onclick="() => Calculator.SetOperation(OperationType.Add)">+</button>
        </div>
        <div class="row">
            @foreach (var digit in new[] { "1", "2", "3" })
            {
                <button class="btn btn-light digit-btn" @onclick="() => Calculator.AppendDigit(digit)">@digit</button>
            }
            <button class="btn btn-primary equals-btn" @onclick="Calculator.Calculate">=</button>
        </div>
        <div class="row">
            <button class="btn btn-light digit-btn" @onclick=@(() => Calculator.AppendDigit("0"))>0</button>
            <button class="btn btn-light digit-btn" @onclick="Calculator.AppendDecimal">.</button>
            <button class="btn btn-secondary" @onclick="Calculator.CalculatePercentage">%</button>
            <button class="btn btn-secondary" @onclick="Calculator.CalculateSquareRoot">√</button>
        </div>
    </div>
</div>

