@page "/"
@using ClassicCalculator
@inject Calculator Calculator

<div class="calculator">
    <div class="calculator-display">@Calculator.DisplayValue</div>
    <div class="calculator-buttons">
        <button class="calc-btn special" @onclick='() => Calculator.Clear()'>C</button>
        <button class="calc-btn operation" @onclick='() => Calculator.CalculatePercentage()'>%</button>
        <button class="calc-btn operation" @onclick='() => Calculator.CalculateSquareRoot()'>√</button>
        <button class="calc-btn operation" @onclick='() => Calculator.SetOperation(OperationType.Divide)'>÷</button>

        <button class="calc-btn digit" @onclick='() => Calculator.AppendDigit("7")'>7</button>
        <button class="calc-btn digit" @onclick='() => Calculator.AppendDigit("8")'>8</button>
        <button class="calc-btn digit" @onclick='() => Calculator.AppendDigit("9")'>9</button>
        <button class="calc-btn operation" @onclick='() => Calculator.SetOperation(OperationType.Multiply)'>×</button>

        <button class="calc-btn digit" @onclick='() => Calculator.AppendDigit("4")'>4</button>
        <button class="calc-btn digit" @onclick='() => Calculator.AppendDigit("5")'>5</button>
        <button class="calc-btn digit" @onclick='() => Calculator.AppendDigit("6")'>6</button>
        <button class="calc-btn operation" @onclick='() => Calculator.SetOperation(OperationType.Subtract)'>-</button>

        <button class="calc-btn digit" @onclick='() => Calculator.AppendDigit("1")'>1</button>
        <button class="calc-btn digit" @onclick='() => Calculator.AppendDigit("2")'>2</button>
        <button class="calc-btn digit" @onclick='() => Calculator.AppendDigit("3")'>3</button>
        <button class="calc-btn operation" @onclick='() => Calculator.SetOperation(OperationType.Add)'>+</button>

        <button class="calc-btn digit" @onclick='() => Calculator.ToggleSign()'>+/-</button>
        <button class="calc-btn digit" @onclick='() => Calculator.AppendDigit("0")'>0</button>
        <button class="calc-btn digit" @onclick='() => Calculator.AppendDigit(".")'>.</button>
        <button class="calc-btn equals" @onclick='() => Calculator.Calculate()'>=</button>
    </div>
</div>

<link href="css/Calculator.css" rel="stylesheet" />

